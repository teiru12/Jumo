<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="member">
	<!-- selectMemberId(아이디 중복확인, 로그인 기능, 회원정보수정폼)--> 
	<select id="selectMemberId" parameterType="hashmap" resultType="hashmap">
	<![CDATA[
		SELECT * 
		FROM 
			MEMBER
 		WHERE 
 			EMAIL= #{EMAIL} 
	]]>
	</select>
	
	<!-- selectMemberJumin(아이디 찾기 결과, 비밀번호 찾기 결과) -->
    <select id="selectMemberJumin" parameterType="hashmap" resultType="hashmap">
	<![CDATA[
		SELECT * 
		FROM 
			MEMBER
		WHERE 
			JUMIN1= #{JUMIN1} AND JUMIN2 = #{JUMIN2}
	]]>
	</select>
	
	<!-- insertMember(회원가입 성공) -->
	<insert id="insertMember" parameterType="hashmap" >
	<![CDATA[
		INSERT INTO 
			MEMBER 
		VALUES
			( #{EMAIL}, 
			#{PASSWORD}, 
			#{NAME}, 
			#{JUMIN1}, 
			#{JUMIN2},
			SYSDATE, 
			#{ADDRESS1}, 
			#{ADDRESS2}, 
			#{POSTCODE}, 
			#{PHONE}, 
			#{MOBILE},
			'B',
			'N') 
	]]>
    </insert>
	
	<!--updateMember(일반회원-회원정보수정)  -->
	<update id="updateMember" parameterType="hashmap" >
	<![CDATA[
		UPDATE 
			MEMBER 
		SET 
			PASSWORD= #{PASSWORD}, 
			NAME= #{NAME},
			ADDRESS1 = #{ADDRESS1}, 
			ADDRESS2 = #{ADDRESS2}, 
			POSTCODE = #{POSTCODE}, 
			PHONE =#{PHONE},
			MOBILE = #{MOBILE} 
		WHERE 
			EMAIL=#{EMAIL}
	]]>
	</update>
	
	<!--updateMemberAdmin(관리자-회원정보수정기능)  -->
	<update  id="updateMemberAdmin" parameterType="hashmap" >
	<![CDATA[
		UPDATE 
			MEMBER
		SET 
			RANK = #{RANK}, 
			BLOCK = #{BLOCK},
			ADDRESS1 = #{ADDRESS1}, 
			ADDRESS2 = #{ADDRESS2},
			POSTCODE = #{POSTCODE}, 
			PHONE =#{PHONE}, 
			MOBILE = #{MOBILE}
		WHERE 
			EMAIL=#{EMAIL}
	]]>
	</update>
	
	<!-- deleteMember(회원탈퇴기능) -->
	<delete id="deleteMember" parameterType="hashmap">
	<![CDATA[
		DELETE 
		FROM 
			MEMBER 
		WHERE 
			EMAIL = #{EMAIL}
	]]>
   	</delete>
   	
   	<!-- memberList(회원리스트) -->
   	<select id="memberList" resultType="hashmap">
	<![CDATA[
   		SELECT * 
   		FROM 
   			MEMBER
	]]>
	</select>
	
   	<!-- memberListPaging(회원리스트 페이징) -->
   	<select id="memberListPaging" resultType="hashmap">
		SELECT *
		FROM (
			SELECT EMAIL, NAME, JUMIN1, JUMIN2, MDATE, ADDRESS1, ADDRESS2, POSTCODE, PHONE, MOBILE, RANK, BLOCK, ROWNUM R
			FROM (
				SELECT
					EMAIL, NAME, JUMIN1, JUMIN2, MDATE, ADDRESS1, ADDRESS2, POSTCODE, PHONE, MOBILE, RANK, BLOCK
				FROM
					MEMBER
				ORDER BY MDATE ASC		
			)
			ORDER BY R
		)
		WHERE
			R BETWEEN #{START} AND #{END}
	</select>	
	
	<!-- memberCount(회원 수) -->
   	<select id="memberCount" resultType="hashmap">
   		SELECT
   			COUNT(*) COUNT
   		FROM 
   			MEMBER
	</select>		
</mapper>